{
    "$schema": "https://swc.rs/schema.json",
    "jsc": {
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "src/*"
            ]
        },
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "dynamicImport": false,
            "decorators": false
        },
        "target": "es2020"
    },
    "module": {
        "type": "es6"
    }
}